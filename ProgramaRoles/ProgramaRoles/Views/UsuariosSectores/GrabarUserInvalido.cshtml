@model ProgramaRoles.ViewModels.ViewModelUserValidez
@{
    ViewBag.Title = "Registros Erroneos";
}
<script src="~/Scripts/tbody.hover.action.js"></script>

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("GrabarUserInvalido", "UsuariosSectores", FormMethod.Post))
{
    <h2>
        Klinicos Interno
    </h2>
    <label>Registros Duplicados, ¿Desea que perduren los datos seleccionados?</label>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Sobreescribir</th>
                <th>ID</th>
                <th>Nombre Usuario</th>
                <th>Roles Temp</th>
                <th>Email</th>
                <th>Fecha Modificación</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Vigente</th>
                <th>Enviar Email</th>
            </tr>
        </thead>
        <tbody class="redColorHover">
            @for (int i = 0; i < Model.listaUsuarioRolHorarioInvalido.Count(); i++)
            {
                <tr>
                    <td align="center">@Html.CheckBoxFor(x => x.listaUsuarioRolHorarioInvalido[i].Chked)</td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorarioInvalido[i].idUsuarioSector)</small></td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorarioInvalido[i].nombreUsuario)</small></td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorarioInvalido[i].rolesTemporales)</small></td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorarioInvalido[i].email)</small></td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorarioInvalido[i].fechaModificacion)</small></td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorarioInvalido[i].fechaInicio)</small></td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorarioInvalido[i].fechaFin)</small></td>
                    <td align="center">@Html.CheckBoxFor(x => x.listaUsuarioRolHorarioInvalido[i].vigente)</td>
                    <td align="center">@Html.CheckBoxFor(x => x.listaUsuarioRolHorarioInvalido[i].emailChked)</td>
                </tr>

                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].Chked)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].idUsuarioSector)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].nombreUsuario)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].rolesTemporales)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].email)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].fechaModificacion)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].fechaInicio)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].fechaFin)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].vigente)
                        @Html.HiddenFor(x => x.listaUsuarioRolHorarioInvalido[i].emailChked)
            }
            </tbody>
        </table>
    <br /><br />

    <div class="row">
        <div class="col-xs-4"></div>

        <div class="col-xs-2 col-xs-offset-1">
            <button type="submit" value="Grabar" class="btn btn-default btn-success">Grabar</button>
        </div>

        <div class="col-xs-4 col-xs-offset-1"></div>
    </div>
}

<script>
    $(document).ready(function () {
        HoverTable();
        ChkedFila();
        MarcarDesmarcarchk();
    });
</script>
<style>

    .event a {
        background: #5FBA7D !important;
        color: #ffffff !important;
    }
</style>

