@model ProgramaRoles.ViewModels.ViewModelUserValido
@{
    ViewBag.Title = "Guardado";
}
<script src="~/Scripts/tbody.hover.action.js"></script>

<legend>Guardado Correctamente</legend>

@using (Html.BeginForm("GrabarUserValido", "UsuariosSectores", FormMethod.Post))
{
    <label>
        Klinicos Central
    </label>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="col-md-2">ID</th>
                <th class="col-md-10">Roles</th>
            </tr>
        </thead>
        <tbody class="redColorHover">
            @for (int i = 0; i < Model.listaUsuario.Count(); i++)
            {
                <tr>
                    <td>@Html.DisplayFor(x => x.listaUsuario[i].Id) </td>
                    <td>@Html.DisplayFor(x => x.listaUsuario[i].roles)</td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />

    <label>
        Klinicos Interno
    </label>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="col-md-1">ID</th>
                <th class="col-md-2">Nombre Usuario</th>
                <th class="col-md-3">Roles Temp</th>
                <th class="col-md-1">Email</th>
                <th class="col-md-1">Fecha Modificación</th>
                <th class="col-md-1">Fecha Inicio</th>
                <th class="col-md-1">Fecha Fin</th>
                <th class="col-md-1">Vigente</th>
                <th class="col-md-1">Enviar Email</th>
            </tr>
        </thead>
        <tbody class="redColorHover">
            @for (int i = 0; i < Model.listaUsuarioRolHorario.Count(); i++)
            {
                <tr>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorario[i].idUsuarioSector)</small> </td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorario[i].nombreUsuario)</small></td>
                    <td><small>@Html.DisplayFor(x => x.listaUsuarioRolHorario[i].rolesTemporales) </small></td>
                    <td>@Html.DisplayFor(x => x.listaUsuarioRolHorario[i].email)</td>
                    <td>@Html.DisplayFor(x => x.listaUsuarioRolHorario[i].fechaModificacion) </td>
                    <td>@Html.DisplayFor(x => x.listaUsuarioRolHorario[i].fechaInicio)</td>
                    <td>@Html.DisplayFor(x => x.listaUsuarioRolHorario[i].fechaFin) </td>
                    <td align="center"> @Html.CheckBoxFor(x => x.listaUsuarioRolHorario[i].vigente)</td>
                    <td align="center">@Html.CheckBoxFor(x => x.listaUsuarioRolHorario[i].emailChked)</td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />
}
    <div class="text-center">
       <br />
       <a style="text-align:center" class="btn btn-default btn-success" href="~/UsuariosSectores/ObtenerUsuariosSectores" title="Cerrar">Cerrar</a>
    </div>
<br />

<script>
    $(document).ready(function () {
        HoverTable();
        ChkedFila();
        MarcarDesmarcarchk();
    });</script>
<style>
    .event a {
        background: #5FBA7D !important;
        color: #ffffff !important;
    }
</style>

